<li>
    {% shape_clear_alternates Model %}
    {% shape_type Model "MenuItemLink" %}
    {% if Model.HasItems %}
        <a class="h4 text-uppercase"{% if Model.ContentItem.Content.LinkMenuItemPart.Url %} href="{{ Model.ContentItem.Content.LinkMenuItemPart.Url }}"{% endif %}>
            {{ Model.ContentItem.Content.LinkMenuItemPart.Name }}
        </a>
        <ul class="list-unstyled">
            {% for item in Model.Items %}
            {{ item | shape_render }}
            {% endfor %}
        </ul>
    {% else %}
        {{ Model | shape_render }}
    {% endif %}
</li>